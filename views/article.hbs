<article class="article-detail">
  <a href="/" class="back-link">&larr; Back to digest</a>

  <header class="article-header">
    <span class="story-category">{{capitalize article.category}}</span>
    <h2 class="article-headline">{{article.title}}</h2>
    {{#if article.subtitle}}
    <p class="article-deck">{{article.subtitle}}</p>
    {{/if}}
    <div class="article-meta">
      {{#if article.source_name}}
      <span class="story-source">{{article.source_name}}</span>
      {{/if}}
      {{#if article.author}}
      <span class="story-author">By {{article.author}}</span>
      {{/if}}
      {{#if article.published_at}}
      <time class="story-time" datetime="{{article.published_at}}">{{formatDate article.published_at}}</time>
      {{/if}}
    </div>
  </header>

  <hr class="article-rule">

  <div class="article-body">
    {{{paragraphs article.summary}}}
  </div>

  <footer class="article-footer">
    <hr class="article-rule">
    <h3>Read the original</h3>
    <div class="article-links">
      {{#if article.original_url}}
      <a href="{{article.original_url}}" target="_blank" rel="noopener noreferrer" class="button button--secondary">
        Original article
      </a>
      {{/if}}
      {{#if article.archive_url}}
      <a href="{{article.archive_url}}" target="_blank" rel="noopener noreferrer" class="button button--secondary">
        Read via Archive (bypass paywall)
      </a>
      {{/if}}
    </div>
  </footer>
</article>
